void checkOutBook() {
    cout << "----------------------------------------" << endl;
    cout << "\t\tBook Check-out form" << endl;
    cout << "----------------------------------------" << endl;

    cout << "\t(Complete the information below)" << endl << endl;

    cout << "Name: ";
    cin.ignore(); 
    getline(cin, name);

    cout << "Contact number: ";
    getline(cin, contactNumber);

    cout << "Book Title: ";
    getline(cin, bookTitle);

    cout << "Book Code: ";
    getline(cin, bookCode);

    cout << "Check-out Date (MM/DD/YYYY): ";
    getline(cin, checkOutDate);

    cout << "Return Date (MM/DD/YYYY): ";
    getline(cin, returnDate);

    cout << "----------------------------------------" << endl;

    char response;
    cout << "Do you want to check out this book? [Y/N]: ";
    cin >> response;
    cin.ignore(); 
    cout << "\n";

    if (response == 'Y') {
        cout << "----------------------------------------" << endl;
        cout << "\t\tBook Check-out Receipt" << endl;
        cout << "----------------------------------------" << endl;

        cout << "Name: " << name << endl;
        cout << "Contact Number: " << contactNumber << endl;
        cout << "Book Title: " << bookTitle << endl;
        cout << "Book Code: " << bookCode << endl;
        cout << "Check-out Date: " << checkOutDate << endl;
        cout << "Return Date: " << returnDate << endl;
        cout << "----------------------------------------" << endl;
        cout << "\tEnter to go back to the menu" << endl;
        cin.get();
        mainMenu();
    } else if (response == 'N') {
        mainMenu();
    } else {
        cout << "----------------------------------------" << endl;
        cout << "\t\tInvalid Input" << endl;
        cout << "----------------------------------------" << endl;
        cin.get();
        mainMenu();
    }
}

