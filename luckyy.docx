void checkOutBook() {
    Book book;
    
    cout << "----------------------------------------" << endl;
    cout << "\t\tBook Check-out form" << endl;
    cout << "----------------------------------------" << endl;

    cout << "\t(Complete the information below)" << endl << endl;

    cout << "Name: ";
    cin.ignore(); 
    getline(cin, name);

    cout << "Contact number: ";
    getline(cin, contactNumber);

    cout << "Book Title: ";
    getline(cin, book.title);

    cout << "Book Code: ";
    getline(cin, book.code);

    cout << "Check-out Date (MM/DD/YYYY): ";
    getline(cin, book.checkOutDate);

    cout << "Return Date (MM/DD/YYYY): ";
    getline(cin, book.returnDate);

    cout << "----------------------------------------" << endl;

    char response;
    cout << "Do you want to check out this book? [Y/N]: ";
    cin >> response;
    cin.ignore(); 
    cout << "\n";
    
    if (response == 'Y') {
        cout << "----------------------------------------" << endl;
        cout << "\t\tBook Check-out Receipt" << endl;
        cout << "----------------------------------------" << endl;

        cout << "Name: " << name << endl;
        cout << "Contact Number: " << contactNumber << endl;
        cout << "Book Title: " << book.title << endl;
        cout << "Book Code: " << book.code << endl;
        cout << "Check-out Date: " << book.checkOutDate << endl;
        cout << "Return Date: " << book.returnDate << endl;
        cout << "----------------------------------------" << endl;
        cout << "\tEnter to go back to the menu" << endl;
        
        Book borrowedBook = {book.code, book.title, book.checkOutDate, book.returnDate};
        borrowedBooks.push_back(borrowedBook);
        
        cin.get();
        mainMenu();
    } else if (response == 'N') {
        mainMenu();
    } else {
        cout << "----------------------------------------" << endl;
        cout << "\t\tInvalid Input" << endl;
        cout << "----------------------------------------" << endl;
        cin.get();
        mainMenu();
    }
}

