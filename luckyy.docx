void myRecord() {
    cout << "----------------------------------------" << endl;
    cout << "\t\t\t\tMy Record" << endl;
    cout << "----------------------------------------" << endl;

    cout << "[1] Show borrowed books" << endl;
    cout << "[2] Show returned books" << endl;
    cout << "----------------------------------------" << endl;
    cout << "Enter your choice ([1]-[2]): ";

    cin >> recordChoice;

    switch (recordChoice) {
        case 1:
            if (borrowedBooks.empty()) {
                cout << "No borrowed books yet" << endl;
                cout << "\n";
                mainMenu();
            } else {
                for (const Book &book : borrowedBooks) {
                    cout << "Book Code: " << book.code << ", Title: " << book.title << endl;
                    cout << "Check-out Date: " << book.checkOutDate << endl;
                    cout << "----------------------------------------" << endl;
                }
                    cout << "\tEnter to go back to the menu" << endl;
                    cin.ignore();
                    cin.get();
                    mainMenu();
            }
            break;

        case 2:
            if (returnedBooks.empty()) {
                cout << "No returned books yet" << endl;
                cout << "\n";
                mainMenu();
            } else {
                for (const Book &book : returnedBooks) {
                    cout << "Book Code: " << book.code << ", Title: " << book.title << endl;
                    cout << "Return Date: " << book.returnDate << endl;
                    cout << "----------------------------------------" << endl;
                }
                    cout << "\tEnter to go back to the menu" << endl;
                    cin.ignore();
                    cin.get();
                    mainMenu();
            }
            break;

        default:
            cout << "Invalid Input";
            mainMenu();
            break;
        }
    }
    
void bookReturnCode() {
    Book book;
    
    cout << "Book Code: ";
    getline (cin, book.code);
    
    auto it = find_if(borrowedBooks.begin(), borrowedBooks.end(), [&book](const Book& b) { return b.code == book.code; });
    
    if (it != borrowedBooks.end()) {
        returnedBooks.push_back(*it);
        borrowedBooks.erase(it);
        
        cout << "Books returned successfully!" << endl;
    } else {
        cout << "Book not found in your borrowed books" << endl;
    }
        cout << "----------------------------------------" << endl;
}

void returnBook() {
    Book book;
    
    cout << "----------------------------------------" << endl;
    cout << "\t\t\tReturn Book" << endl;
    cout << "----------------------------------------" << endl;
    
    if (borrowedBooks.empty()) {
        cout << "No borrowed books yet" << endl;
        mainMenu();
    } else if (!borrowedBooks.empty()) { 
        cout << "Your Borrowed Books:" << endl;
            for (const Book& book : borrowedBooks) {
        cout << "Book Code: " << book.code << ", Title: " << book.title << endl;
        cout << "Check-out Date: " << book.checkOutDate << endl;
        cout << "----------------------------------------" << endl;
        bookReturnCode();
        }
    } else {
        bookReturnCode();
    }
}   

